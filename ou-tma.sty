{
    \group_begin:
    \tl_set:Nn \l_sanitise_result_tl {}
    \tl_set:Nx \l_tmpa_tl {\text_lowercase:n {#1}}
    \str_map_function:NN \l_tmpa_tl \sanitisetag_check:n
    \tl_gset_eq:NN \g_sanitise_tag_tl \l_sanitise_result_tl
    \group_end:
}
